<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MAM.UserControls.StatusBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MAM.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ThemeControlBackgroundColor}" Padding="12,0">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
            <ProgressRing x:Name="StatusRing"
                          Width="20"
                          Height="20"
                          IsActive="False"
                          Visibility="Collapsed" />
            <TextBlock x:Name="StatusText"
                       Text=""
                       VerticalAlignment="Center"
                       FontSize="12"
                       Foreground="Gray" />
        </StackPanel>
    </Grid>
</UserControl>
