<UserControl
    x:Class="MAM.UserControls.CustomBinMedia"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MAM.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="270" Height="260">

    <Grid CornerRadius="5" Background="Transparent">
        <Border BorderBrush="#444" BorderThickness="1" CornerRadius="6" Background="#1E1E1E">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="38"/>
                    <!-- Duration -->
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="150"/>
                    <!-- Thumbnail -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- Duration and Archive Icon Row -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Height="38" Background="#2A2A2A" Padding="8,0,8,0" VerticalAlignment="Center" Spacing="8">
                    <FontIcon x:Name="ArchiveLabel"
                              FontFamily="{StaticResource FontAwesome}"
                              Glyph="&#xF187;"
                              Foreground="Red"
                              VerticalAlignment="Center"
                              Visibility="{x:Bind MediaItem.IsArchived, Converter={StaticResource BooleanToVisibilityConverter}}"
                              ToolTipService.ToolTip="Archived"/>

                    <TextBlock Text="{x:Bind viewModel.MediaObj.Duration, Mode=OneWay}"
                               
                               FontSize="13"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Title -->
                <TextBlock Grid.Row="1"
                           Text="{x:Bind viewModel.MediaObj.Title, Mode=OneWay}"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="White"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           Margin="10,4,10,6"
                           ToolTipService.ToolTip="{x:Bind viewModel.MediaObj.Title, Mode=OneWay}" />

                <!-- Thumbnail -->
                <Image Grid.Row="2"
                       x:Name="Thumbnail"
                       Width="250"
                       Height="150"
                       Margin="10,0,10,6"
                       Stretch="UniformToFill"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10,0,0,10" Spacing="8">

                    <!-- Play -->
                    <Button Style="{StaticResource SmallIconButton}" ToolTipService.ToolTip="Play" Click="PlayButton_Click">
                        <FontIcon FontFamily="{StaticResource FontAwesome}" Glyph="&#xf04b;" Foreground="White"/>
                    </Button>

                    <!-- Edit -->
                    <Button Style="{StaticResource SmallIconButton}" ToolTipService.ToolTip="Edit" Click="EditButton_Click">
                        <FontIcon FontFamily="{StaticResource FontAwesome}" Glyph="&#xf044;" Foreground="White"/>
                    </Button>

                    <!-- Versions -->
                    <Button Style="{StaticResource SmallIconButton}" ToolTipService.ToolTip="Version List" Click="VersionListButton_Click">
                        <BitmapIcon UriSource="ms-appx:///Assets/version.png"/>
                    </Button>

                    <!-- Authorize -->
                    <Button Style="{StaticResource SmallIconButton}" ToolTipService.ToolTip="Authorize" Click="AuthorizeButton_Click">
                        <FontIcon FontFamily="{StaticResource FontAwesome}" Glyph="&#xf084;" Foreground="White"/>
                    </Button>

                    <!-- Delete -->
                    <Button Style="{StaticResource SmallIconButton}" ToolTipService.ToolTip="Delete" Click="DeleteButton_Click">
                        <FontIcon FontFamily="{StaticResource FontAwesome}" Glyph="&#xf2ed;" Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

