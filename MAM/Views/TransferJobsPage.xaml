<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MAM.Views.TransferJobsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MAM.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled">
    <Grid>
        <NavigationView x:Name="navProcesses" 
                 PaneDisplayMode="Top"
                 IsBackEnabled="True"
                 IsSettingsVisible="False"
                 SelectionChanged="navProcesses_SelectionChanged"
                 Loaded="navProcesses_Loaded"
                 ItemInvoked="navProcesses_ItemInvoked"
                 BackRequested="navProcesses_BackRequested">
            <NavigationView.MenuItems>
                <NavigationViewItem  Content="Waiting File Transfer" Tag="WaitingFileTransfer" />
                <NavigationViewItem  Content="Finished File Transfer" Tag="FinishedFileTransfer" />
            </NavigationView.MenuItems>
            <ScrollViewer>
                <Frame x:Name="ContentFrame" IsTabStop="True">
                </Frame>
            </ScrollViewer>
        </NavigationView>
    </Grid>
</Page>
