<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MAM.Views.MediaBinViews.AssetMetadata.General"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20" Background="{StaticResource ThemeSecondaryBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <!--<TextBlock Text="Update Metadata"
                   FontSize="18" FontWeight="SemiBold"
                   Foreground="White" Grid.Row="0" Margin="2,0,0,8"/>-->

        <!-- Form: 4-column layout so we can render two columns after Description -->
        <Grid Grid.Row="1" x:Name="FormGrid" ColumnSpacing="12" RowSpacing="2">
            <!-- Columns : Label | Value | Label(right) | Value(right) -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <!-- left label -->
                <ColumnDefinition Width="*"/>
                <!-- left value -->
                <ColumnDefinition Width="130"/>
                <!-- right label -->
                <ColumnDefinition Width="*"/>
                <!-- right value -->
            </Grid.ColumnDefinitions>

            <!-- explicit rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Id -->
                <RowDefinition Height="30"/>
                <!-- Name -->
                <RowDefinition Height="60"/>
                <!-- File (multi-line) -->
                <RowDefinition Height="110"/>
                <!-- Description (editable) -->
                <RowDefinition Height="30"/>
                <!-- Meta row 1 (Version / Type) -->
                <RowDefinition Height="30"/>
                <!-- Meta row 2 (Duration / Size) -->
                <RowDefinition Height="30"/>
                <!-- Meta row 3 (Created / CreationDate) -->
                <RowDefinition Height="30"/>
                <!-- Meta row 4 (Updated / LastUpdate) -->
            </Grid.RowDefinitions>

            <!-- Row 0: Id -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Id:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Media.MediaId}" Foreground="White" VerticalAlignment="Center"/>

            <!-- Row 1: Name -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Media.Title}" Foreground="White" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

            <!-- Row 2: File (full width value) -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="File:" Foreground="LightGray" VerticalAlignment="Top"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                       Text="{Binding Media.MediaSource.LocalPath}"
                       Foreground="White" TextWrapping="Wrap" Padding="6" VerticalAlignment="Top"/>

            <!-- Row 3: Description (full width editable) -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Description:" Foreground="LightGray" VerticalAlignment="Top"/>
            <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                     Text="{Binding Media.Description, Mode=TwoWay}"
                     AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100"
                     Padding="8" Foreground="White" VerticalAlignment="Top"/>

            <!-- Row 4: Version (left) | Type (right) -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Version:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Media.Version}" Foreground="White" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="4" Grid.Column="2" Text="Type:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding Media.Type}" Foreground="White" VerticalAlignment="Center"/>

            <!-- Row 5: Duration (left) | Size (right) -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Duration:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding TotalDuration}" Foreground="White" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="5" Grid.Column="2" Text="Size:" Foreground="LightGray" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="5" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Spacing="6">
                <TextBlock Text="{Binding Media.Size}" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="MB" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Row 6: Created User (left) | Creation Date (right) -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Created User:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Media.CreatedUser}" Foreground="White" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="6" Grid.Column="2" Text="Creation Date:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="6" Grid.Column="3" Text="{Binding Media.CreationDate}" Foreground="White" VerticalAlignment="Center"/>

            <!-- Row 7: Updated User (left) | Last Update (right) -->
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Updated User:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Media.UpdatedUser}" Foreground="White" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="7" Grid.Column="2" Text="Last Update:" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="7" Grid.Column="3" Text="{Binding Media.LastUpdate}" Foreground="White" VerticalAlignment="Center"/>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0" Spacing="12">
                <Button Click="DownloadButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xf019;" FontSize="16" Foreground="{StaticResource ThemeHighlightColor}"/>
                        <TextBlock Text=" Download" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <CheckBox Content="Completed"/>
                <CheckBox Content="RSS"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                <Button Click="SaveButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xf0c7;" FontSize="16" Foreground="{StaticResource ThemeHighlightColor}"/>
                        <TextBlock Text=" Save" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Click="CancelButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xf00d;" FontSize="16" Foreground="{StaticResource ThemeHighlightColor}"/>
                        <TextBlock Text=" Cancel" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>


